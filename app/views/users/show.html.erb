<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-3">
    <section class="user_info">
      <h1><%= @user.name %></h1>
    </section>
    <%= link_to 'アカウント情報修正', edit_user_path(@user) %>
  </aside>
  <div class="content_title">
    <h3>アイテム一覧</h3>
  </div>
  <% if @user.items.any? %>
  <div class="col-md-9">
    <ol class="items">
      <%= render @items %>
    </ol>
  </div>
  <div class="paginate">
    <%= paginate @items %>
  </div>
  <% end %>
</div>
