<%= link_to item_path(item) do %>
  <li class="<%= item %>">
    <div>
      <% unless item.pictures.last.nil? %>
        <div><%=cl_image_tag item.pictures.last.picture.url, size: "200x200"%></div>
      <% else %>
        <%=image_tag 'no_image.jpg', size: "200x200"%>
      <% end %>
    </div>
    <div class="name">
      <h4>
        <%=item.name%>
        <% unless item.show_enable %>
          (非表示)
        <% end %>
      </h4>
    </div>
    <div>
      <div class="price">
        <% unless item.quantity.zero?%>
          ￥
          <%=item.price%>
        <% else %>
          sold out
        <% end %>
      </div>
    </div>
  </li>
<% end %>
