<%= link_to item_path(item) do %>
  <li class="<%= item %>">
    <div>
      <% unless item.pictures.first.nil? %>
        <div><%=cl_image_tag item.pictures.first.picture.url, size: "200x200"%></div>
      <% else %>
        <%=image_tag 'no_image.jpg', size: "200x200"%>
      <% end %>
    </div>
    <div class="name">
      <h4><%=item.name%></h4>
    </div>
    <div>
      <div class="price">
        <% unless item.quantity.zero?%>
          ï¿¥
          <%=item.price%>
        <% else %>
          sold out
        <% end %>
      </div>
    </div>
  </li>
<% end %>
