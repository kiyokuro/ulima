<%= form_for(@item, url: url) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label "タイトル", class: "space_top10" %>
  <%= f.text_field :name, class: 'form-control' %>

  <%= f.label "アイテム説明",class: "space_top10" %>
  <%= f.text_area :description,rows: 5, class: 'form-control' %>

  <%= f.fields_for :pictures do |picture| %>
    <%= picture.label "アイテム画像", class: "space_top10"%>
    <%= picture.file_field :picture, accept: 'image/jpeg,image/gif,image/png'%>
  <% end %>

  <%= f.label "値段", class: "space_top10" %>
  <%= f.number_field :price, class: 'form-control', min: 0, step: 10 %>

  <%= f.label "個数", class: "space_top10" %>
  <%= f.number_field :quantity, class: 'form-control', in: 1..100 %>

  <%= f.label "公開する", class: "space_top10" %>
  <%= f.check_box :show_enable, checked: true %>

  <%= f.submit yield(:button_text), class: "btn btn-primary btn-lg btn-block space_top10"  %>
<% end %>
